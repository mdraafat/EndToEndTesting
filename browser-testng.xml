<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="All Tests">

    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <test name="Registration Tests">
        <classes>
            <class name="RegisterUserTest"/>
            <class name="LoginUserWithCorrectEmailAndPasswordTest"/>
            <class name="LoginUserWithIncorrectEmailAndPasswordTest"/>
            <class name="LogoutUserTest"/>
            <class name="RegisterUserWithExistingEmailTest"/>
        </classes>
    </test>

    <test name="Functionality Tests">
        <classes>
            <class name="ContactUsFormTest"/>
            <class name="TestCasesPageTest"/>
            <class name="AllProductsAndProductDetailTest"/>
            <class name="SearchProductTest"/>
            <class name="VerifySubscriptionInHomePageTest"/>
            <class name="VerifySubscriptionInCartPageTest"/>
            <class name="AddReviewOnProductTest"/>
            <class name="AddProductsInCartTest"/>
            <class name="VerifyProductQuantityInCartTest"/>
            <class name="VerifyScrollUpUsingArrowButtonAndScrollDownFunctionalityTest"/>
            <class name="VerifyScrollUpWithoutArrowButtonAndScrollDownFunctionalityTest"/>
        </classes>
    </test>

    <test name="Cart and Checkout Tests">
        <classes>
            <class name="PlaceOrderRegisterWhileCheckoutTest"/>
            <class name="PlaceOrderRegisterBeforeCheckoutTest"/>
            <class name="PlaceOrderLoginBeforeCheckoutTest"/>
            <class name="RemoveProductsFromCartTest"/>
            <class name="ViewCategoryProductsTest"/>
            <class name="ViewAndCartBrandProductsTest"/>
            <class name="SearchProductsAndVerifyCartAfterLoginTest"/>
            <class name="AddToCartFromRecommendedItemsTest"/>
            <class name="VerifyAddressDetailsInCheckoutPageTest"/>
            <class name="DownloadInvoiceAfterPurchaseOrderTest"/>
        </classes>
    </test>

</suite>